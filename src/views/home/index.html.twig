{% extends "template.html.twig" %}

{% block title %}Accueil - Brian Didierjean{% endblock %}

{% block content %}
	<!-- Masthead-->
	<header class="masthead bg-primary text-white text-center">
		<div
			class="container d-flex align-items-center flex-column">
			<!-- Masthead Avatar Image-->
			<img
			class="masthead-avatar mb-5" src="./assets/avatar.svg" alt=""/>
			<!-- Masthead Heading-->
			<h1 class="masthead-heading text-uppercase mb-0">Brian Didierjean</h1>
			<!-- Icon Divider-->
			<div class="divider-custom divider-light">
				<div class="divider-custom-line"></div>
				<div class="divider-custom-icon">
					<i class="fas fa-star"></i>
				</div>
				<div class="divider-custom-line"></div>
			</div>
			<!-- Masthead Subheading-->
			<p class="masthead-subheading font-weight-light mb-0">Développeur web PHP/Symfony</p>
		</div>
	</header>

	<!-- About Section-->
	<section class="page-section mb-0" id="about">
		<div
			class="container">
			<!-- About Section Heading-->
			<h2 class="page-section-heading text-center text-uppercase">À propos de moi</h2>
			<!-- Icon Divider-->
			<div class="divider-custom">
				<div class="divider-custom-line"></div>
				<div class="divider-custom-icon">
					<i class="fas fa-star"></i>
				</div>
				<div class="divider-custom-line"></div>
			</div>
			<!-- About Section Content-->
			<div class="row">
				<div class="col-lg-12 ml-auto">
					<p class="lead text-center">Étudiant en développement web consciencieux et autodidacte. Recherche une entreprise pour effectuer ma seconde année d'alternance en développement PHP/Symfony.</p>
				</div>
			</div>
			<!-- About Section Button-->
			<div class="text-center mt-4">
				<a class="btn btn-primary btn-xl" href="./assets/cv-brian-didierjean.pdf">
					<i class="fas fa-download mr-2"></i>
					Télécharger mon CV
				</a>
			</div>
		</div>
	</section>

	<!-- Contact Section-->
	<section class="page-section" id="contact">
		<div
			class="container">
			<!-- Contact Section Heading-->
			<h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Contact</h2>
			<!-- Icon Divider-->
			<div class="divider-custom">
				<div class="divider-custom-line"></div>
				<div class="divider-custom-icon">
					<i class="fas fa-star"></i>
				</div>
				<div class="divider-custom-line"></div>
			</div>
			<!-- Contact Section Form-->
			<div class="row">
				<div
					class="col-lg-8 mx-auto">
					<form method="post" action="/">
          {{ form | raw }}
						<br/>
						<div id="success"></div>
						<div class="form-group">
							<button class="btn btn-primary btn-xl" type="submit">Envoyer</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
