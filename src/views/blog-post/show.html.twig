{% extends "template.html.twig" %}

{% block title %}{{ blogPost.title }} - Brian Didierjean
{% endblock %}

{% block content %}
<!-- Blog Post Section -->
<section class="page-section mb-0 mt-5 mx-5" id="blog-post">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h1>{{ blogPost.title }}</h1>
        <p>{{ blogPost.heading }}</p>
        <p>{{ blogPost.content }}</p>
        <!-- Comments List -->
        {% for comment in comments %}
        <!-- Comment Card -->
        <div class="col-sm-6">
          <div class="card mt-5">
            <div class="card-body">
              <p class="card-text">{{ comment.content }}</p>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
  </div>
  </div>
</section>
{% endblock %}