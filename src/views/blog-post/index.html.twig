{% extends "template.html.twig" %}

{% block title %}Blog - Brian Didierjean
{% endblock %}

{% block content %}
<!-- Blog Posts Section -->
<section class="page-section mb-0 mt-5 mx-5" id="blog-posts">
  <!-- Blog Section Heading-->
  <h1 class="page-section-heading text-center text-uppercase text-secondary pt-4">Blog</h1>
  <!-- Icon Divider-->
  <div class="divider-custom">
    <div class="divider-custom-line"></div>
    <div class="divider-custom-icon">
      <i class="fas fa-star"></i>
    </div>
    <div class="divider-custom-line"></div>
  </div>
  <div class="container">
    <div class="row">
      <!-- Blog Posts List -->
      {% for blogPost in blogPosts %}
      <!-- Blog Post Card -->
      <div class="col-sm-6">
        <div class="card my-5 h-auto">
          <div class="card-header">Dernière mise à jour le {{ blogPost.updateDate|date("m/d/Y") }}</div>
          <div class="card-body">
            <h2 class="card-title">{{ blogPost.title }}</h2>
            <p class="card-text">{{ blogPost.heading }}</p>
            <a class="btn btn-primary" href="/blog-post-{{ blogPost.id }}">Lire l'article</a>
          </div>
          <div class="card-footer">Posté par {{ blogPostUsers[blogPost.userId].firstName }} {{ blogPostUsers[blogPost.userId].lastName }}</div>
        </div>
      </div>
      {% endfor %}
      <nav class="d-flex justify-content-center" aria-label="Page navigation example">
        <ul class="pagination">
          {% if prevBlogPostId != false %}
          <li class="page-item"><a class="page-link" href="/blog-post-{{ prevBlogPostId }}">Article précedent</a></li>
          {% endif %}
          {% if nextBlogPostId != false %}
          <li class="page-item"><a class="page-link" href="/blog-post-{{ nextBlogPostId }}">Article suivant</a></li>
          {% endif %}
        </ul>
      </nav>
    </div>
  </div>
</section>
{% endblock %}