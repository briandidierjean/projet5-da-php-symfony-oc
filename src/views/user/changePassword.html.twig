{% extends "template.html.twig" %}

{% block title %}Modifier le mot de passe - Brian Didierjean{% endblock %}

{% block content %}
<!-- Change Password Section-->
	<section class="page-section mt-4" id="sign-in">
		<div
			class="container mt-5">
			<!-- Change Password Section Heading-->
			<h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Modifier le mot de passe</h2>
			<!-- Icon Divider-->
			<div class="divider-custom">
				<div class="divider-custom-line"></div>
				<div class="divider-custom-icon">
					<i class="fas fa-star"></i>
				</div>
				<div class="divider-custom-line"></div>
			</div>
			<!-- Change Password Section Form-->
			<div class="row">
				<div
					class="col-lg-8 mx-auto">
					<form method="post" action="/change-password">
          {{ form | raw }}
						<br/>
						<div id="success"></div>
						<div class="form-group">
							<button class="btn btn-primary btn-xl" type="submit">Valider</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>
{% endblock %}